<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/layout_dialog_record"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/ancho_dialog_llaves"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/dialog_matriz00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="-128"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@+id/dialog_matriz01"
            android:layout_marginRight="@dimen/dialog_margen_llave"/>
        <TextView
            android:id="@+id/dialog_matriz01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="-128"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/dialog_matriz02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="-128"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/dialog_matriz01"
            android:layout_marginLeft="@dimen/dialog_margen_llave"/>


        <TextView
            android:id="@+id/dialog_matriz10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="128"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@+id/dialog_matriz11"
            android:layout_below="@+id/dialog_matriz00"
            android:layout_marginRight="@dimen/dialog_margen_llave"/>
        <TextView
            android:id="@+id/dialog_matriz11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="128"
            android:textColor="@android:color/black"
            android:layout_below="@+id/dialog_matriz01"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/dialog_matriz12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="128"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/dialog_matriz11"
            android:layout_below="@+id/dialog_matriz02"
            android:layout_marginLeft="@dimen/dialog_margen_llave"/>


        <TextView
            android:id="@+id/dialog_matriz20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="128"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@+id/dialog_matriz21"
            android:layout_below="@+id/dialog_matriz10"
            android:layout_marginRight="@dimen/dialog_margen_llave"/>
        <TextView
            android:id="@+id/dialog_matriz21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="128"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dialog_matriz11"/>
        <TextView
            android:id="@+id/dialog_matriz22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_dialog_llaves"
            android:text="128"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/dialog_matriz21"
            android:layout_below="@+id/dialog_matriz12"
            android:layout_marginLeft="@dimen/dialog_margen_llave"/>

        <Button
            android:id="@+id/btn_generar_matriz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_matriz21"
            android:text="Generar Matriz"
            android:textSize="@dimen/texto_boton_dialog_llaves"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_aceptar_matriz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_generar_matriz"
            android:text="Aceptar"
            android:textSize="@dimen/texto_boton_dialog_llaves"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>